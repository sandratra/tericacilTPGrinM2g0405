<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    
    <security-constraint>
    <display-name>Pages pour administrateur</display-name>
    <web-resource-collection>
      <web-resource-name>pagesadmin</web-resource-name>
      <description>Pages réservées aux administrateurs</description>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>Administrateur</description>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <display-name>Pages pour utilisateurs connectés</display-name>
    <web-resource-collection>
      <web-resource-name>pagesconnect</web-resource-name>
      <description>Pour protéger des pages Web</description>
      <url-pattern>/connect/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>Pages réservées aux administrateurs</description>
      <role-name>**</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-role>
    <description>Administrateur</description>
    <role-name>admin</role-name>
  </security-role>
  
</web-app>
